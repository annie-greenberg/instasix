<% if user_signed_in? %>
  <div class="main-wrapper">
    <div class="organize">
      <% @posts.each do |post| %>
          <div class="image center-block">
            <%= link_to image_tag(post.image, class:'images img-responsive'), post_path(post) %><br>
          </div>
      <% end %>
    </div>
  </div>
<% else %>
  <div class="jumbotron text-center">
   <h1>¡Bienvenidos a Instasix!</h1>
     <p>
       <%= link_to "Iniciar sesión", new_user_session_path, class: "btn btn-default btn-lg" %>
       <%= link_to "Regístrate", new_user_registration_path, class: "btn btn-primary btn-lg" %>
     </p>
  </div>
<% end %>
